<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Import Dictionary</h1>

  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
    <%= form_tag import_dictionaries_path, multipart: true, class: "space-y-6" do %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Select Excel File
        </label>
        <%= file_field_tag :file,
            accept: '.xlsx, .xls',
            class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="mt-2 text-sm text-gray-500">
          Please upload an Excel file (.xlsx or .xls) with the following columns:
          word, pronunciation, meaning, word_en, pronunciation_en, meaning_en
        </p>
      </div>

      <div class="flex gap-4">
        <%= submit_tag "Import",
            class: "px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= link_to "Back", dictionaries_path,
            class: "px-6 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>
    <% end %>
  </div>
</div>
